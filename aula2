// JavaScript JSFiddle

// Lógica Condicional
// código que verifica se um número é múltiplo de outro

var x = 4
var y = 2

if (x % y == 0)
// % é módulo, verifica o resto da divisão
{
document.write("X é múltiplo de Y")
}
else
{
document.write("X não é múltiplo de Y")
}

